.download-container
  margin-top: 50px
  padding-right: 100px

  .download-inner-container
    overflow: hidden

    .big-img
      width: 640px

    .download-panel
      width: 400px
      text-align: center

      img
        max-width: 100%

  .app-title
    margin-top: 100px
    font-size: 22px
    color: #583330
    line-height: 40px

.download-QnR
  margin-top: 40px
  overflow: hidden

  .download-platform-wrap
    float: right
    height: 200px
    margin-top: 10px

    .platform
      width: 200px
      line-height: 50px
      background-color: #583330
      color: #fff
      margin-bottom: 20px
      font-size: 20px
      cursor: pointer
      position: relative

    .platform:before
      content: " "
      position: absolute
      display: block
      width: 21px
      height: 25px
      background-size: cover
      top: 12px;
      left: 20px;

    .platform.android:before
      background-image: url('../image/android_icon_white.png')

    .platform.iPhone:before
      background-image: url('../image/apple_icon_white.png')

  .QnR-outer-wrap
    margin-top: 10px
    width: 140px
    margin-left: 20px
    float: left

    .QnR-inner-wrap
      position: relative
      margin: 0px

      .rect
        width:30px
        height:30px
        position: absolute
        background-color: transparent

      for v in top bottom
        for h in left right
          .rect-{v}-{h}
            {v}: -8px
            {h}: -8px
            border-{v}: solid 3px #583330
            border-{h}: solid 3px #583330
